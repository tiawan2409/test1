#include <iostream>
using namespace std;
// ini program kalkulator tiawan@pei.ac.id
main() {
 char pilih;
 float bil1, bil2, hasil;
 
 cout << " Menu Pilihan Proses" <<endl;
 cout << "===================================" <<endl;
 cout << "[A]. Penjumlahan"<<endl;
 cout << "[B]. Pengurangan"<<endl;
 cout << "[C]. Perkalian"<<endl;
 cout << "[D]. Pembagian"<<endl;
 cout << "===================================" <<endl;
 cout << "Pilihan Anda [A/B/C/D] : ";
 cin >> pilih;
 
 switch(pilih){
  case 'A' :
  case 'a' :
   cout << "Masukkan Angka Pertama : ";
   cin >> bil1;
   cout << "Masukkan Bilangan Kedua : ";
   cin >> bil2;
   hasil = bil1+bil2;
   cout << "Hasil Dari " << bil1 <<"+"<<bil2;
   cout << " Adalah : " << hasil;
   break;
  case 'B' :
  case 'b' :
   cout << "Masukkan Angka Pertama : ";
   cin >> bil1;
   cout << "Masukkan Bilangan Kedua : ";
   cin >> bil2;
   hasil = bil1-bil2;
   cout << "Hasil Dari " << bil1 <<"-"<<bil2<< " Adalah : " << hasil;
   break;
  case 'C' :
  case 'c' :
   cout << "Masukkan Angka Pertama : ";
   cin >> bil1;
   cout << "Masukkan Bilangan Kedua : ";
   cin >> bil2;
   hasil = bil1*bil2;
   cout << "Hasil Dari " << bil1 <<"*"<<bil2<< " Adalah : " << hasil;
   break;
  case 'D' :
  case 'd' :
      cout << "Masukkan Angka Pertama : ";
   cin >> bil1;
   cout << "Masukkan Bilangan Kedua : ";
   cin >> bil2;
   hasil = bil1/bil2;
   cout << "Hasil Dari " << bil1 <<"/"<<bil2<< " Adalah : " << hasil;
   break;
 }
 
 return 0;
}
